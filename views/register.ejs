<%- include('./includes/header.ejs') %>

<h1 class="title">Register</h1>
<section class="content">
  <div class="card">
    <form action="/auth/register" method="post" class="form">
      <h2 class="form-title">Register</h2>
      <div class="form-item">
        <label class="form-label" for="email">Email/Username <span class="required">*</span></label>
        <input class="form-input" type="email" name="email" id="email" placeholder="Email"
          value="<%= locals.email ? email : ''  %>">
      </div>
      <div class="form-item">
        <label class="form-label" for="password">Password <span class="required">*</span></label>
        <div class="password">
          <input class="password-input" type="password" name="password" id="password" placeholder="Password"
            value="<%= locals.password ? password : ''  %>">
          <img src="../../image/hide-64.png" alt="Show password icon" onclick="togglePasswordView()"
            class="password-icon" id="password-icon">
        </div>
      </div>
      <div class="form-item">
        <label class="form-label" for="accountId">Account ID / Invite Code</label>
        <input class="form-input" type="text" name="accountId" id="accountId" placeholder="Account ID / Invite Code"
          value="<%= locals.accountId ? accountId : ''  %>">
      </div>
      <div>
        <button class="button button--form" type="submit">Sign Up!</button>
      </div>
    </form>
    <div>
      <p>Already have an account? <span><a href="/auth/login">Login here</a>.</span></p>
    </div>
  </div>
</section>

<%- include('./includes/footer.ejs') %>